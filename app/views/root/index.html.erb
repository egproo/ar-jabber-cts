<div class="table-responsive col-xs-12">
  <table id="products" class="datatable table table-bordered" cellpadding="0" cellspacing="0" border="0">
    <thead>
      <tr>
        <th><%=t 'Room Name' %></th>
        <th><%=t 'Room Owner' %></th>
        <th><%=t 'Contract Creator' %></th>
        <th><%=t 'First Appeared' %></th>
        <th><%=t 'Contract Period' %></th>
        <th><%=t 'Payment Amount' %></th>
        <th><%=t 'Payment Date' %></th>
        <th><%=t 'Next Payment Date' %></th>
        <th><%=t 'Next Payment Amount (estimated)' %></th>
      </tr>
    </thead>
    <tbody>
      <% @contracts.each do |c| %>
        <tr>
          <td><%= c[:room_name] %></td>
          <td><%= c[:room_owner] %></td>
          <td><%= c[:contract_creator] %></td>
          <td><%= c[:first_appeared] %></td>
          <td><%= c[:contract_period] %></td>
          <td><%= c[:payment_amount] %></td>
          <td><%= c[:payment_date] %></td>
          <td><%= c[:next_payment_date] || 'n/a' %></td>
          <td><%= c[:next_payment_estimate] || 'n/a' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
