<table>
	<tr>
		<th><%=t 'Room Name' %></th>
		<th><%=t 'Room Owner' %></th>
		<th><%=t 'Contract Creator' %></th>
		<th><%=t 'First Appeared' %></th>
		<th><%=t 'Contract Period' %></th>
		<th><%=t 'Payment Amount' %></th>
		<th><%=t 'Payment Date' %></th>
		<th><%=t 'Next Payment Date' %></th>
		<th><%=t 'Next Payment Amount (estimated)' %></th>
	</tr>
<% @contracts.each do |c| %>
	<tr>
		<% c.each_value do |v| %>
			<td><%= v %></td>
		<% end %>
	</tr>
<% end %>
</table>
