<pre>
Name: <%= @user.name %>
Role: <%= @user.role_name %>
jid/mail: <%= @user.jid %>

Contracts:
	Sold  : <%= @user.sold_contracts.count %>
	Bought: <%= @user.bought_contracts.count %>

Debt: $<%= @user.debt %>
<% if @user.salary_contract %>
Salary (expected): $<%= @user.salary_contract.next_amount_estimate %> at <%= @user.salary_contract.next_payment_date %>
<% end %>
</pre>

<% if @user.role == User::ROLE_CLIENT %>
  <%= link_to 'Receive money transfer from this client', "/money_transfers/new?sender_id=#{@user.id}&receiver_id=#{current_user.id}", class: 'btn' %>
<% elsif @user == current_user %>
  <%#= link_to 'Receive money transfer from client', "/money_transfers/new?receiver_id=#{@user.id}", class: 'btn' %>
  <%#= link_to 'Send money transfer', "/money_transfers/new?sender_id=#{@user.id}", class: 'btn' %>

  <%= simple_form_for @user do |f| %>
	  <%= f.input :password %>
  	  <%= f.submit 'Save Password', class: 'btn' %>
  <% end %>
<% end %>

<ul>
<br/>Money Transfers:
  <% (@user.sent_transfers + @user.received_transfers).sort_by(&:received_at).reverse_each do |t| %>
  	<li><%= link_to t, t %></li>
  <% end %>
</ul>
<ul>
<br/>Contracts:
  <% @user.bought_contracts.active.each do |c| %>
    <li><%= link_to c, c %></li>
  <% end %>
</ul>
