<%= simple_form_for @contract, html: { class: 'form-horizontal' } do |f| %>
	<%= f.input :name, label: 'Room name', input_html: { class: 'room-name' } %>
	<%= f.input :buyer, label: 'Room owner', input_html: { class: 'typeahead_user' } %>
	<%= f.input :seller, readonly: true, input_html: { class: 'typeahead_user' } %>

	<%= f.submit class: 'btn btn-primary' %>
<% end %>
