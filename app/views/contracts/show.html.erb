<pre>
Name:  <%= @contract.name %>
Room Owner: <%= link_to @contract.buyer.name, @contract.buyer %>
Contract Creator: <%= link_to @contract.seller.name, @contract.seller %>
Duration (months): <%= @contract.duration_months %>
<% if @contract.last_payment %>
Last payment: <%= link_to @contract.last_payment, @contract.last_payment.money_transfer %>
<% if @contract.duration_months %>
Next payment: <%= @contract.next_payment_date.to_date %>
<% end %>
<% end %>

First appeared: <%= @contract.created_at.to_date %>
</pre>

<%= link_to 'Receive money transfer for this contract', "/money_transfers/new?sender_id=#{@contract.buyer.id}&receiver_id=#{current_user.id}&contract_id=#{@contract.id}", class: 'btn' %>

<% if @contract.payments.any? %>
	<br/>Money transfer history:
<% @contract.payments.sort_by(&:created_at).reverse_each do |p| %>
	<br/><%= link_to p, p.money_transfer %>
<% end %>
<% end %>
