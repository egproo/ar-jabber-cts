<pre>
Money transfer:
	From:    <%= link_to *([@money_transfer.sender]*2) %>
	To:      <%= link_to *([@money_transfer.receiver]*2) %>
	Date:    <%= @money_transfer.created_at.to_date %>
	Amount:  $<%= @money_transfer.amount %>
	Comment: <%= @money_transfer.comment || '(no comment)' %>

<% if @money_transfer.payments.any? %>
Payments:
	<% @money_transfer.payments.each do |p| %>
	<%= link_to p, p.contract %>
	<% end %>
<% end %>
</pre>
