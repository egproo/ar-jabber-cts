<%= simple_form_for @contract, url: rooms_path, html: { class: 'form-horizontal' } do |f| %>
	<%= f.input :name, label: 'Room name', input_html: { class: 'room-name' } %>
	<%= f.input :buyer, label: 'Room owner', input_html: { class: 'typeahead-user' } %>
	<%= f.input :seller, readonly: true, input_html: { class: 'typeahead-user' } %>

	<%= f.submit class: 'btn btn-primary controls' %>
<% end %>
