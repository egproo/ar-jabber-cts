<% unless @room.active %>
	<h4>This room is disabled (at <%= @room.deactivated_at %> by <%= @room.deactivated_by %>)</h4>
<% end %>

<table cellpadding="5px">
	<tr>
		<td>Name: <%= @room.name %></td>
		<td>Backup: <%= Hash === @room.adhoc_data ? (@room.adhoc_data['dumped_at'] or 'saved') : 'not saved' %>
<% if Hash === @room_info && @room_info.any? %>
		   <%= link_to Hash === @room.adhoc_data ? 'Update' : 'Save', store_room_adhoc_data_path(@room), class: 'btn' %>
<% end %>
   	    </td>
	</tr>
	<tr>
		<td>Room Owner: <%= link_to @room.buyer.name, @room.buyer %></td>
		<td>Contract Creator: <%= link_to @room.seller.name, @room.seller %></td>
	</tr>
	<tr>
		<td>Created: <%= @room.created_at %></td>
		<td>Updated: <%= @room.updated_at %></td>
	</tr>
<% if @room.last_payment %>
	<tr>
		<td>Last payment: <%= link_to @room.last_payment, @room.last_payment.money_transfer %></td>
		<td>Next payment: <%= @room.next_payment_date.to_date %></td>
	</tr>
<% end %>
</table>

<% if @room.comment.present? %>
	<p>Comment: <%= @room.comment %>
<% end %>

<% if @room.active %>
<%= link_to 'Receive money transfer for this contract', new_money_transfer_path(sender_id: @room.buyer, receiver_id: current_user, contract_id: @room.id), class: 'btn' %>
<%= link_to 'Edit room', edit_room_path(@room), class: 'btn' %>
<%= link_to 'Disable this contract', @room,
	class: 'btn btn-danger',
	confirm: 'Are you sure you want to disable this contract?',
	method: :delete %>
<% end %>

<% if @room.payments.any? %>
	<p>Money transfer history:</p>
	<ul>
<%   @room.payments.sort_by(&:effective_from).reverse_each do |p| %>
	<li>&nbsp;&nbsp;<%= link_to p, p.money_transfer %></li>
<%   end %>
	</ul>
<% end %>

<% if Integer === @room_info %>
Room does not exist (code <%= @room_info %>)
<% elsif @room_info %>

<% if time = (Time.parse("#{@room_info['last_message_at']} +0000") rescue nil) %>
<p>Last Message: <%= time.utc %> (<%= time_ago_in_words(time) %> ago)</p>
<% end %>

<% if @room_info['subject'].present? %>
<p>Subject (author: <%= @room_info['subject_author'] || 'n/a' %>):</p>
<pre><%= @room_info['subject'] %></pre>
<% end %>

<div class="accordion" id="room_info_accordion">
<%
  %w(config affiliations users).each do |table_name|
  	data = @room_info[table_name]
    next if data.blank?
    first_item = data.first
    if Hash === first_item
    	columns = first_item.keys
    else
    	columns = %w(Key Value)
    end
%>
  <div class="accordion-group">
    <div class="accordion-heading">
    	<a class="accordion-toggle" data-toggle="collapse" data-parent="#room_info_accordion" href="#<%= table_name %>_collapse">
        	<%= table_name.capitalize %> (<%= @room_info[table_name].size %>)
      	</a>
    </div>
    <div id="<%= table_name %>_collapse" class="accordion-body collapse">
        <table class="table table-bordered table-condensed" cellpadding="0" cellspacing="0" border="0">
					<thead>
						<tr>
<% columns.each do |column_name| %>
							<th><%=t column_name.capitalize %></th>
<% end %>
						</tr>
					</thead>
					<tbody>
<% data.each do |values| %>
						<tr>
<% if Hash === values
     columns.each do |column_name| %>
							<td><%= values[column_name] %></td>
<%   end
   else %>
							<td><%= values[0] %></td>
							<td><%= values[1] %></td>
<% end %>
						</tr>
<% end %>
					</tbody>
				</table>
    </div>
  </div>
<% end %>
<% end %>
